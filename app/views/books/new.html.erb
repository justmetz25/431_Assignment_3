<%= link_to("<< Back to List", books_path, :class => 'back-link') %>

<div class="Books new">
  <h2>Create Book</h2>

  <%= form_for(@book) do |f| %>

    <table summary="Book form fields">
      <tr>
        <th>Title</th>
        <td><%= f.text_field(:title) %></td>
      </tr>
      <tr>
        <th>Author</th>
        <td><%= f.text_field(:author) %></td>
      </tr>
      <tr>
        <th>Genre</th>
        <td><%= f.select :genre, ['Action and Adventure', 'Fantasy', 'Childrens Books', 'Graphic Novels', 'History', 'Fiction', 'Nonfiction'] %></td>
      </tr>
      <tr>
        <th>Price</th>
        <td><%= f.number_field(:price, step: :any) %></td>
      </tr>
      <tr>
        <th>Date</th>
        <td><%= f.date_select :published_date, start_year: Time.new(1900).year, end_year:Time.now.year %></td>
      </tr>
    </table>

    <div class="form-buttons">
      <%= f.submit("Create Book") %>
    </div>

  <% end %>
</div>
