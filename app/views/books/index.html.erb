<% if !flash[:notice].blank? %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
<% end %>


<div class="books index">
  <h2>Books</h2>

  <%= link_to("Add New Book", new_book_path, :class => 'action new') %>

  <table class="listing" summary="book list">
    <tr class="header">
      <th>Title</th>
      <th>Author</th>
      <th>Genre</th>
      <th>Price</th>
      <th>Published Date</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.genre %></td>
      <td><%= book.price %></td>
      <td><%= book.published_date.strftime("%m-%d-%Y") %></td>
      <td class="actions">
        <%= link_to("Show", book_path(book), :class => 'action show') %>
        <%= link_to("Edit", edit_book_path(book), :class => 'action edit') %>
        <%= link_to("Delete", delete_book_path(book), :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div> 